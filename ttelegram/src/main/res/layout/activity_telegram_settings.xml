<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transporttelegram.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/BoxStyle"
        >

        <TextView
            style="@style/ModuleHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ttm_module_name"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            style="@style/BoxStyle"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_to_send"
            style="@style/BoxStyle"
            />

        <CheckBox
            android:id="@+id/cbText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:onClick="onClick"
            style="@style/CheckBoxStyle"
            />

        <CheckBox
            android:id="@+id/cbPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            android:onClick="onClick"
            style="@style/CheckBoxStyle"
            />

        <CheckBox
            android:id="@+id/cbFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/file"
            android:onClick="onClick"
            style="@style/CheckBoxStyle"
            />

        <CheckBox
            android:id="@+id/cbLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:onClick="onClick"
            style="@style/CheckBoxStyle"
            />

            <CheckBox
                android:id="@+id/cbNotifyOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ttm_notify_online"
                android:onClick="onClick"
                style="@style/CheckBoxStyle"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

        <Button
            android:id="@+id/btClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_close_caption"
            android:onClick="onCloseClick"
            style="@style/BoxStyle"
            />

    </LinearLayout>

</LinearLayout>